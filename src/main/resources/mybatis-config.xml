<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 加载数据库配置 -->
    <properties resource="db.properties"/>
    <!-- 驼峰命名自动转换 -->
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <setting name="logImpl" value="LOG4J"/>
    </settings>
    <!-- 实体类别名 -->
    <typeAliases>
        <package name="com.ecommerce.entity"/>
    </typeAliases>
    <!-- 环境配置 -->
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>
    <!-- 映射文件扫描 -->
    <mappers>
        <mapper resource="mapper/RegChannelMapper.xml"/>
        <mapper resource="mapper/MemberLevelMapper.xml"/>
        <mapper resource="mapper/MemberMapper.xml"/>
        <mapper resource="mapper/MemberAddressMapper.xml"/>
        <mapper resource="mapper/PointsRecordMapper.xml"/>
        <mapper resource="mapper/OperationLogMapper.xml"/>
    </mappers>
</configuration>