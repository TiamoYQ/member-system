<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ecommerce.mapper.PointsRecordMapper">
    <insert id="insert" parameterType="PointsRecord">
        INSERT INTO t_points_record(member_id,points,biz_type,biz_id,remark)
        VALUES(#{memberId},#{points},#{bizType},#{bizId},#{remark})
    </insert>
    <select id="selectByMemberId" parameterType="Integer" resultType="PointsRecord">
        SELECT * FROM t_points_record WHERE member_id = #{memberId} ORDER BY create_time DESC
    </select>
</mapper>